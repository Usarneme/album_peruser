<% include ../partials/header %>
  <h1 class="row">My Genres
    <% if(authData != null) { %>
      <a href="/genres/add" class="btn-lg btn-success ml-auto">Add Genre</a>
    <% } %>
  </h1>

  <table class="table table-striped">
    <tbody>
      <% for(var i=0; i<genres.length; i++) { %>
        <tr>
          <td><%= genres[i].name %></td>
          <% if(authData != null) { %>
            <td class="controls-td">
              <a href="/genres/edit/<%= genres[i].id %>" class="btn btn-dark">Edit</a>
              <a data-id="<%= genres[i].id %>" class="btn btn-danger delete-genre">Delete</a>
            </td>
          <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>
<% include ../partials/footer %>
